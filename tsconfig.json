{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "baseUrl": "./",
    "paths": {
      "~/*": ["./src/*"],
      "@common/*": ["src/common/*"],
      "@test/*": ["./test/*"]
    },
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src", "test"]
}
